<h2>Productos</h2>

<div class="product-list">
    {{#each products}}
        <div class="product-item">
            <h3>{{this.title}}</h3>
            <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" width="150">
            <p>{{this.description}}</p>
            <p><strong>Precio:</strong> ${{this.price}}</p>
            <p><strong>Categoría:</strong> {{this.category}}</p>
            <form action="/api/carts/add-to-cart/{{this._id}}" method="POST">
                <label for="quantity-{{this._id}}">Cantidad:</label>
                <input type="number" id="quantity-{{this._id}}" name="quantity" value="1" min="1" max="{{this.stock}}" required>
                <button type="submit">Agregar al Carrito</button>
            </form>
            <a href="/products/{{this._id}}">Ver Detalles</a>
        </div>
    {{/each}}
</div>

<div class="pagination">
    {{#if pagination.hasPrevPage}}
        <a href="{{pagination.prevLink}}">Anterior</a>
    {{else}}
        <span>Anterior</span>
    {{/if}}

    <span>Página {{pagination.currentPage}} de {{pagination.totalPages}}</span>

    {{#if pagination.hasNextPage}}
        <a href="{{pagination.nextLink}}">Siguiente</a>
    {{else}}
        <span>Siguiente</span>
    {{/if}}
</div>
